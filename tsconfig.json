{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "es2015",
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
}